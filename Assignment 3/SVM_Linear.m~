function model = SVM_Linear(classification_type,X,Y)
    if(classification_type == 'linear_classification')
        model = fitcsvm(X,Y, 'KernelFunction','linear', 'BoxConstraint',1);
        
    elseif(classification_type == 'polynomial_classification')
        model = fitcsvm(X,Y, 'KernelFunction','polynomial', 'PolynomialOrder',q, 'BoxConstraint',1);
        
    elseif(classification_type == 'rbf_classification')
        model = fitcsvm(X,Y, 'KernelFunction','RBF', 'KernelScale',sigma, 'BoxConstraint',1);
    
    elseif(classification_type == 'linear_regression')
        % set Epsilon to something sensible, type different values
        % model performance is not important at this point
        model = fitrsvm(X,Y, 'KernelFunction','linear', 'BoxConstraint',1, 'Epsilon', 1);
        
    end
end