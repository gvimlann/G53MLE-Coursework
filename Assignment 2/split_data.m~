function [gain,best_index] = split_data(data,labels,feature_index,feature_list)
    base_remainder = inf;
    best_index = 0;
    for feat = 1: size(feature_list)
        center = feature_list(feat);
        %split them to left and right node based on the feat value
        for temp_feat = 1 : size(feature_list)
            if(data(temp_feat,feature_index) < center)
                left_side = [left_side,labels(temp_feat)];
            else
                right_side = [right_side,labels(temp_feat)];
            end
        end
        %Remainder
        temp_remainder = calculateEntropy(left_side) + calculateEntropy(right_side);
        if temp_remainder < remainder
            base_remaremainderinder = temp_remainder;
            best_index = feat;
        end
    end
    gain = calculateEntropy(labels) - base_remainder;
end